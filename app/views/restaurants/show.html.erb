<h1>Show Menu</h1>
<%= link_to "back to restaurants list",  restaurants_path %>
<%if @role == "manger" && current_user.id == @restaurant.user_id%>
<%= link_to "add food", new_restaurant_food_path(@restaurant.id) %>
<%end%>
<ul>
<% @restaurant.foods.each do |f|%>

<li><%= f.name%></li>
<li><%= f.price%></li>
<%= image_tag(f.image, size: "100x100", alt: "")%>
<%if @role == "manger" && current_user.id == @restaurant.user_id%>
<%= link_to "Delete food", restaurant_food_path([@restaurant],[f]) ,method: :delete,
     data: {confirm: "Are you sure you want to delete " + f.name} %>
<%end%>


<%end%>
</ul>
<%= link_to  "Book a table", new_reservation_path(@restaurant) %>