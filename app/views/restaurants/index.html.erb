<h1>Restaurant Index</h1>

<ul>
<% @restaurants.each do |restaurant|%>
<%= image_tag(restaurant.image, size: "200x200", alt: "")%>
<li>
<%= link_to  restaurant.name, restaurant_path(restaurant) %>
<br>
<%= restaurant.category %>
<%if @role == "admin" %>
<%= link_to "Edit restaurant", edit_restaurant_path(restaurant)%>  


<%= link_to "Delete restaurant", restaurant_path(restaurant) ,method: :delete,
     data: {confirm: "Are you sure you want to delete " + restaurant.name} %>
<%end%>

</li>
<br>
<%end%>
</ul>