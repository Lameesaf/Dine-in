                            <p class="card-text"><%= restaurant.category%></p>
                        </div>
                    </div>
                    <!-- <div> <%= restaurant.name %></div> -->
                    <% if i == 3 %>
                </div>
            </div>
            <%i = 0%>
            <% end %>
            <% end %>

